<%- include('../partials/header') %>

    <h1 class="text-center"><span class="border-bottom pb-1">Create a campground</span></h1>
    <form action="/campgrounds" method="POST" class="formContent" enctype="multipart/form-data">
        <div class="form-group">
            <input class="form-control" type="text" placeholder="Name" name="campground[name]" maxlength="30" required>
        </div>
        <div class="form-group">
            <!-- <label for="image">Upload Image</label> -->
            <input type="file" id="image" name="image" accept="image/*" required>
        </div>
        <div class="form-group">
            <input class="form-control" type="number" placeholder="Price" name="campground[price]" min="2000" max="8000" step="1" required>
        </div>
        <div class="form-group">
            <textarea class="form-control" placeholder="Description" name="campground[description]" rows="8" required></textarea>
        </div>
        <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Submit!</button>
        </div>
        <a href="/campgrounds">Go Back</a>
    </form>
    
<%- include('../partials/footer') %>